<div class=" row quanlybacsi">
        <div class="col-sm-2">
            {{>menubar}}
        </div>
        <div class="col-sm-10">
            <div>
                {{>header}}
            </div>
            <div class="main-home ">
                <div class="container mt-3">
                    <h3>Quản Lý Bác Sĩ</h3>
                    <div class="line" ></div>
                    <br/>
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link " data-toggle="tab" href="#home" >
                                <i class="fa fa-address-book"></i><span>Bác Sĩ</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#menu1">
                                <i class="fa fa-list-alt"></i><span>Danh Sách Bác Sĩ</span>
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="home" class="container tab-pane fade"><br />
                            <div class="row" style="margin-left: 0px;">
                                <div class="title-line"></div>
                                <h5>Thông tin Bác Sĩ</h5>
                            </div>
                            <form action="" method="" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Mã Bác Sĩ: </label>
                                            <input type="text" name="MaKhoa" value="{{khoaChinhSua.MaKhoa}}"
                                                class="form-control" placeholder="Mã Bác Sĩ..." readonly>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Họ tên Bác Sĩ: </label>
                                            <input  type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Họ tên Bác sĩ...">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Giới tính:</label>
                                            <select class="form-control" id="ChonGioiTinh">
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Ngày sinh: </label>
                                            <input type="date" name="NamSinh"  value="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Ảnh: </label>
                                            <input  type="file" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" >
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Số điện thoại: </label>
                                            <input  type="tel" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Số điện thoại...">
                                        </div>
                                    </div>
                                     <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Email: </label>
                                            <input  type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Email...">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Chuyên khoa:</label>
                                            <select class="form-control" id="ChonGioiTinh">
                                                <option value="Chẩn đoán hình ảnh">Chẩn đoán hình ảnh</option>
                                                <option value="Cơ-Xương-Khớp">Cơ-Xương-Khớp</option>
                                                <option value="Nhi Khoa">Nhi Khoa</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Học hàm học vị:</label>
                                            <select class="form-control" id="ChonGioiTinh">
                                                <option value="Chẩn đoán hình ảnh">GS.TS.BS</option>
                                                <option value="TS.BS">TS.BS</option>
                                                <option value="Thạc sĩ, Bác sĩ">Thạc sĩ, Bác sĩ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Chức vụ: </label>
                                            <input  type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Chức vụ...">
                                        </div>
                                    </div>
                                     <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Kinh nghiệm (số năm): </label>
                                            <input  type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Kinh nghiệm (số năm)...">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Trạng thái:</label>
                                            <select class="form-control" id="ChonGioiTinh">
                                                <option value="Nam">Đang làm</option>
                                                <option value="Nữ">Tạm nghỉ</option>
                                                <option value="Nữ">Đã nghỉ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Địa chỉ phòng khám: </label>
                                            <input type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Địa chỉ phòng khám...">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="sel1">Đơn giá (VNĐ): </label>
                                            <input type="text" value="{{khoaChinhSua.TenKhoa}}" name="TenBacSi"
                                                class="form-control" placeholder="Đơn giá (VNĐ)..."/>
                                        </div>
                                    </div>
                                     <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="sel1">Giới thiệu về Bác sĩ:</label>
                                            <textarea type="text" name="TenBacSi"
                                                class="form-control" placeholder="Giới thiệu về Bác sĩ..."></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 20px;">
                                    <div class="col-lg-4" style="display: flex; justify-content: center;">
                                        <button type="button" onclick="ThemKhoaVien(this);" 
                                            class="btn btn-primary">THÊM</button>
                                    </div>
                                    <div class="col-lg-4" style="display: flex; justify-content: center;">
                                        <button type="button" onclick="LuuChinhSuaKhoa(this);" class="btn btn-warning">CHỈNH
                                            SỬA</button>
                                    </div>
                                    <div class="col-lg-4" style="display: flex; justify-content: center;" >
                                        <button type="button" class="btn btn-secondary">LÀM MỚI</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div id="menu1" class="container tab-pane active div-table-list"><br />
