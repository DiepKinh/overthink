                                                    <td>Nhi Khoa</td>
                                                    <td>Đang làm</td>
                                                    <td>GS.TS.BS</td>
                                                    <td>Bác sĩ điều trị</td>
                                                    <td>
                                                        <a href="#" class="btn btn-info">Xem Chi tiết</a>
                                                        <a href="#" class="btn btn-warning">Chỉnh Sửa</a>
                                                        <a href="/quanly-lophp/delete?MaLopHP={{this.MaLopHP}}" onclick="return confirm ('Xoá lớp học phần {{this.TenMonHoc}} ( {{this.TenLopHP}} ) ?')" class="btn btn-danger">Xóa</a>
                                                        <a href="/dangkylichranh/123456789" class="btn btn-success">Đăng Ký Lịch Khám/Lịch Khám</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 </div>
        
        
